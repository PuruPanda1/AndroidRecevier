<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="5dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/floatingIcon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_default_bag"
            app:contentPadding="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@color/gray"
            android:elevation="3dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/circleImageView" />


        <TextView
            android:id="@+id/dateShowRC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:paddingTop="2dp"
            android:paddingEnd="10dp"
            android:paddingBottom="2dp"
            android:text="Category"
            app:layout_constraintStart_toEndOf="@id/floatingIcon"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/quantityRC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:paddingStart="10dp"
            android:paddingTop="2dp"

            android:paddingEnd="10dp"
            android:paddingBottom="2dp"
            android:text="@string/quantity"
            app:layout_constraintStart_toEndOf="@id/dateShowRC"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/descriptionShowRC"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="42dp"
            android:text="Pizza Dine out"
            app:layout_constraintEnd_toStartOf="@+id/amountShowRC"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/floatingIcon"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/amountShowRC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"

            android:padding="2dp"
            android:text="@string/amount"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@id/idNumber"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/idNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="adasdsak"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/descriptionShowRC"
            app:layout_constraintTop_toBottomOf="@id/descriptionShowRC" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>